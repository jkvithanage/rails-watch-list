<div class="container">
  <h1><%= @list.name %></h1>
  <%= link_to "Add a bookmark", new_list_bookmark_path(@list), class: 'btn btn-primary my-3' %>
  <h2>Bookmarks</h2>
  <hr>
  <div class="alert alert-success" role="alert">
    <% if notice.present? %>
      <%= notice %>
    <% end %>
  </div>
  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card m-3 col-3">
        <%= image_tag "#{bookmark.movie.poster_url}", {class: "card-img-top"} %>
        <div class="card-body">
          <p class="card-text" >Comments: <%= bookmark.comment %></p>
          <div class="d-flex justify-content-between">
            <h4 class="card-title"><%= bookmark.movie.title %></h4>
            <span class=" ms-3">
              <%= bookmark.movie.rating.to_f %>
              <i class="fa-solid fa-star"></i>
            </span>
          </div>
          <p class="card-text"><%= bookmark.movie.overview %></p>
          <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        </div>
      </div>
    <% end %>
  </div>
</div>
