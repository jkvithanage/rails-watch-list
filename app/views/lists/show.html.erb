<div class="container">
  <h1><%= @list.name %></h1>
  <%= link_to "Add a bookmark", new_list_bookmark_path(@list), class: 'btn btn-primary my-3' %>
  <%= link_to "My lists", lists_path, class: 'btn btn-secondary my-3' %>
  <h2>Bookmarks</h2>
  <hr>
  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card m-3 col-4">
        <%= image_tag "#{bookmark.movie.poster_url}", {class: "card-img-top"} %>
        <div class="card-body">
          <p class="card-text" >Comments: <%= bookmark.comment %></p>
          <div class="d-flex justify-content-between">
            <h4 class="card-title"><%= bookmark.movie.title %></h4>
            <span class=" ms-3">
              <%= bookmark.movie.rating%>
              <i class="fa-solid fa-star"></i>
            </span>
          </div>
          <p class="card-text"><%= bookmark.movie.overview %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
